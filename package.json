    "@types/react-dom": "^17.0.0",
    "@types/resize-observer-browser": "^0.1.5",
    "@types/shuffle-seed": "^1.1.0",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "babel-eslint": "10.1.0",
    "canvas": "^2.8.0",
    "canvas2svg": "^1.0.16",
    "chroma-js": "^2.1.0",
    "dayjs": "^1.10.5",
